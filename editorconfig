root = true

# Defaults.
[*]
indent_style = tab
end_of_line = lf
insert_final_newline = true
charset = utf-8

# YML files require spaces for indentation.
[*.yml]
indent_style = space
indent_size = 2

# Ruby files.
[*.{erb,rb,gemspec}]
indent_style = space
indent_size = 2

# SQL files.
[*.sql]
indent_style = space
indent_size = 2

# Puppet files.
[*.pp]
indent_style = space
indent_size = 2

# Perl change logs require spaces.
[Changes]
indent_style = space
indent_size = 8
